<form action="{{ path('home_show') }}" method="post">
		<div>
			<label for="categories-select">Selectionner une Catégorie :</label>

			<select name="categories" id="categories-select" class="form-control mb-3">
				<option></option>
                {% for category in categories %}
					<option>{{ category }}</option>
				{% endfor %}
			</select>
		</div>

		<div>
			<label for="brands-select">Selectionner une Marque :</label>
			<select name="brands" id="brands-select" class="form-control mb-3">
			<option></option>
				{% for brand in brands %}
					<option>{{ brand }}</option>
				{% endfor %}
			</select>
		</div>
		<div>
			<label for="useCondition-select">État :</label>
			<select name="etat" id="etat-select" class="form-control mb-3">
			<option></option>
				{% for useConditions in useCondition %}
					<option>{{ useConditions }}</option>
				{% endfor %}
			</select>
		</div>

		<div>
			<label for="region-select">Selectionner une Région :</label>

			<select name="region" id="region-select" class="form-control mb-3">
			<option></option>
				{% for region in regions %}
					<option>{{ region }}</option>
				{% endfor %}
			</select>
		</div>

		<div>
			<label for="mot-clés">Mot-clés :</label>
			<input type="search" name="mot-cles" class="form-control mb-3">
		</div>

		<div class="d-flex flex-column align-items-center">
			<input type="submit" value="Rechercher" class="btn btn-primary mb-2">
		</div>
	</form>