{% extends 'base.html.twig' %}

{% block title %}Annonce{% endblock %}

{% block body %}
<main class= "container-fluid border">
 <div class ="row">
  <div id="carouselExampleSlidesOnly" class="carousel slide col-sm-12 col-lg-8" data-bs-ride="carousel">
   <div class="carousel-inner">
    <div class="carousel-item active">
      <img src="/build/images/Le-wgp-trilogy-3.jpg" class="rounded float-start" width="500" height="400" alt="Article-image">
    </div>
    <div class="carousel-item">
      <img src="/build/images/Le-wgp-trilogy-2.jpg" class="rounded float-start" width="500" height="400" alt="Article-image">
    </div>
    <div class="carousel-item">
      <img src="/build/images/Le-wgp-trilogy.jpg" class="rounded float-start" width="500" height="400" alt="Article-image">
    </div>
  </div>
 </div>
      <div class="card-body col-sm-12 col-lg-4 border bg-bluecard">
        <section class= "container-fluid d-flex flex-column" width="353" height="323">
          <div class= "row d-flex flex-column">
            <div class= "col-sm-8 col-lg-4">
                <img src= {{ advert.owner.photo.url }} class="thumbnail rounded mx-auto d-block" width="64" height="64" alt="img-profile">
            </div>
            <div class= "col-sm-4 col-lg-8 text-black">
              <p> {{ advert.owner.pseudo }} </p>
              <cite>
              <p>{{ advert.owner|length }}</p>
              </cite>
          </div>
          </div>
            <div class= "container">
                <div class= "row">
                  <div class= "col-12 text-black">
                      <p>
                    Mail en journée pour plus de rapidité
                         ou sms sinon sans problèmes </p>
                  </div>
                <HR>
                </div>
            </div>
                <div class= "row">
                    <a href="#" class="col border btn btn-danger text-black">Contacter</a>
                </div>
              </div>
        </section>
      </div>
      <section class="container-fluid text-black">
        <div class="row">
          <div class="col-12">
            <h2> {{ advert.title }} {{ advert.price }} € </h2>
          </div>
          <br><br>
          <div class="col-6">
            <p>Annonce parue le {{ advert.creationDate|date("d/m/Y") }}</p>
          </div>
          <div class="col-6">
            <p>Dernière mise à jour le {{ advert.updateDate|date("d/m/Y") }}</p>
          </div>
          <br>
          <div class="col-6">
            <p>Marque: {{ advert.brand }}</p>
          </div>
          <div class="col-6">
            <p>Modèle: Lanceur WGP</p>
          </div>
          <br>
          <div class="col-12">
            <p>Description: {{ advert.description }}</p>
          </div>
          <div class="col-12">
            <cite>Condition</cite>
            <p>{{ advert.useCondition }}</p>
          </div>
          <div class="col-6">
            <a href="#" class="btn btn-primary col-xs-3">Signaler l'annonce</a>
          </div>
          <br>
    </div>
  <section>
</main>
{% endblock %}
