{% extends 'base.html.twig' %}

{% block title %}Mon profil{% endblock %}

{% block body %}
    <main class="container px-4 fill">
        <h1 class="display-4 fw-normal">Mes informations personnelles</h1>
        <hr>
        <div class="row gy-5">
            <div class="col-12">
                <img class="img-fluid rounded" src="{{ user.photo.url }}">
            </div>
            <div class="col-md-6">
                <div class="p-3 border bg-light">Nom : <span class="fw-bold">{{ user.lastname }}</span></div>
            </div>
            <div class="col-md-6">
                <div class="p-3 border bg-light">Pr√©nom : <span class="fw-bold">{{ user.firstname }}</span></div>
            </div>
             <div class="col-md-6">
                <div class="p-3 border bg-light">Pseudo : <span class="fw-bold">{{ user.pseudo }}</span></div>
            </div>
            <div class="col-md-6">
                <div class="p-3 border bg-light">Email : <span class="fw-bold">{{ user.email }}</span></div>
            </div>
             <div class="col-md-6">
                <div class="p-3 border bg-light">Date de naissance : <span class="fw-bold">{{ user.birthdate|date("d/m/Y") }}</span></div>
            </div>
            <div class="col-md-6">
                <div class="p-3 border bg-light">Code postal : <span class="fw-bold">{{ user.postalCode }}</span></div>
            </div>
        </div>
    </main>
{% endblock %}
